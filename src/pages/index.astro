---
// Layout
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";

// Sections
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Experience from "../components/Experience.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio Ruth Abreu - Web Developer and Programmer"
  description="Hire me to build your next website or web application. I'm a web developer and programmer with experience in HTML, CSS, JavaScript, React, Ruby on Rails, and more."
>
  <main class="px-4">
    <SectionContainer class="py-32 pb-12 lg:py-44 lg:pb-24 md:py-44 md:pb-24">
      <Hero />
    </SectionContainer>

    <SectionContainer
      id="work-experience"
      class="pb-24 pt-20 lg:py-24 lg:pb-32"
    >
      <Experience />
    </SectionContainer>

    <SectionContainer id="recent-works">
      <Projects />
    </SectionContainer>

    <SectionContainer id="about-me" class="py-10">
      <About />
    </SectionContainer>

    <SectionContainer id="contact-form" class="py-10">
      <Contact />
    </SectionContainer>

    <Footer />
  </main>
</Layout>

